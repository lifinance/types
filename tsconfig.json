{
  "compilerOptions": {
    "target": "ES6",
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true /* Generates corresponding '.d.ts' file. */,
    "outDir": "./dist" /* Redirect output structure to the directory. */
  },
  "include": ["src/**/*"]
}
